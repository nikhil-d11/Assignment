<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardElevation="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardBackgroundColor="#303030"
    android:layout_marginBottom="20dp"
    android:layout_height="280dp"
    >

    <ImageView
        android:src="@drawable/ic_launcher_foreground"
        android:id="@+id/movie_cell_image"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        />

    <LinearLayout
        android:gravity="center"
        android:padding="15dp"
        android:background="#44000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/movie_cell_bookmark"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/bookmark"

        />
    </LinearLayout>
<!--    -->
   <TextView
        android:maxLines="2"
        android:textColor="@color/textcolourPrimary"
        android:layout_gravity="bottom"
        android:id="@+id/movie_cell_title"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Iron Man 3"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:textColor="@color/textcolourPrimary"
        android:layout_gravity="bottom"
        android:id="@+id/movie_cell_rating"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8.7"/>

</androidx.cardview.widget.CardView>